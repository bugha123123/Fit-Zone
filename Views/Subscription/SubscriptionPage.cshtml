@model Subscription



<div class="container-fluid mt-5">
    <div class="row">
        <!-- Left side with image -->
        <div class="col-md-6">
            <img src="~/Images/pixlr-image-generator-458a6518-485b-4637-8964-4b641e7637b3.png" class="img-fluid subscription-image rounded-3 mb-4" alt="Subscription Image">
        </div>

        <!-- Right side with subscription card -->
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <div class="card border-primary" style="width: 400px; height: 500px;">
                <div class="card-header bg-primary text-white">
                    Subscription Plan
                </div>
                <div class="card-body">
                    <h5 class="card-title">Basic Plan</h5>
                    <p class="card-text">Price: $9.99/month</p>
                    <p class="card-text">Benefits:</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Access to exclusive content</li>
                        <!-- Add more benefits here -->
                    </ul>
                    <a asp-action="StripeCheckOut" asp-controller="Subscription" class="btn btn-primary btn-lg mt-3">Subscribe Now</a>
                </div>
                <div class="card-footer text-muted">
                    1 Month Free Trial
                </div>
            </div>
        </div>
    </div>
</div>
