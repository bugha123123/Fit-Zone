@model User

<style>
    .otp-box {
        width: 40px;
        height: 40px;
        border: 1px solid black;
        margin: 5px;
        text-align: center;
        font-size: 24px;
    }

    .btn-submit {
        margin-top: 20px;
    }
</style>

<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="card border shadow mx-auto" style="max-width: 400px;">
        <div class="card-header text-center">
            <h2>Enter OTP</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="VerifyOTP" asp-controller="Account" class="text-center">
                <!-- Hidden field to store the verification code -->

                <!-- Single input field for OTP -->
                <div class="otp-container d-flex justify-content-center g-2">
                    <input type="text"  name="otp" maxlength="4" required>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>


