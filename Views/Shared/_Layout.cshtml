<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instagram_Clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" asp-append-version="true">

    <style>
        #myModal a:hover {
            color: gray;
        }

        #myModal {
           
            transition: all 0.3s ease;
        }
    </style>

</head>
<body>
    <nav style="font-family: 'Times New Roman', Times, serif; background: #000000; max-width: 355px;height:100vh;  ">
        <ul class="pt-5" style="overflow-y: auto;  margin: 0;">
            <li style="list-style-type: none;" class="d-flex flex-column">
                <a style="color: #f5f5f5; text-decoration: none; font-size: 29px;margin-bottom:40px;">Instagram</a>

                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-home" style="margin-right: 10px;"></i>Home</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-search" style="margin-right: 10px;"></i>Search</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-compass" style="margin-right: 10px;"></i>Explore</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-play" style="margin-right: 10px;"></i>Reels</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-envelope" style="margin-right: 10px;"></i>Messages</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-bell" style="margin-right: 10px;"></i>Notifications</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-plus" style="margin-right: 10px;"></i>Create</a>
                <a style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-user" style="margin-right: 10px;"></i>Profile</a>
                <a class="morebutton" style="color: #f5f5f5; text-decoration: none;  font-size: 20px; "><i class=" fa fa-ellipsis-v" style="margin-right: 10px;"></i>More</a>


                <div id="myModal" class="modal mt-3" style="max-width: 266px; height: 300px; background: #262626; border-radius: 12px; padding: 12px; font-size: 20px;">
                    <div class="text-white d-flex flex-column ">
                        <a style="margin-left: 15px; margin-top: 15px;" id="settingsBtn"><i class="fa fa-cog" style="margin-right:10px"></i> Settings</a>
                        <a style="margin-left: 15px; margin-top: 15px;" id="reportBtn"><i class="fa fa-exclamation-circle" style="margin-right:10px"></i> Report a Problem</a>
                        <a style="margin-left: 15px; margin-top: 15px;" id="savedBtn"><i class="fa fa-save" style="margin-right:10px"></i> Saved</a>
                        <form asp-action="LogOutUser" asp-controller="Account" method="post" class="mt-3">
                            <a style="margin-left: 15px; margin-top: 15px;" id="logoutBtn"><i class="fa fa-sign-out-alt" style="margin-right:10px"></i> <button class="btn btn-primary" type="submit">Logout</button></a>
                        </form>
                     
                    </div>
                </div>


            </li>
        </ul>
    </nav>











    <div class="container mx-auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    
<script>
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var moreButton = document.querySelector('.morebutton');

        // When the user clicks on the button, open the modal
        moreButton.onclick = function () {
            modal.style.display = "block";
            // Adjust modal position
            var moreButtonRect = moreButton.getBoundingClientRect();
            modal.style.top = (moreButtonRect.bottom + window.scrollY) + "px";
            modal.style.left = moreButtonRect.left + "px";
        }

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

    body

</script>
</body>
</html>
