<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Instagram_Clone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" asp-append-version="true">

    <style>
        /* Custom styles */
        .sidebar {
            font-family: 'Times New Roman', Times, serif;
            background: #000000;
            max-width: 355px;
            height: 100vh;
            flex:1
        }

        .content {
            display: flex;
            margin:0;
       
            background-color: #000000; /* Right side background color */
            flex: 1; /* Content takes up remaining space */
            padding: 20px; /* Add padding for better spacing */
        }

        #myModal {
            max-width: 266px;
            height: 300px;
            background: #262626;
            border-radius: 12px;
            padding: 12px;
            font-size: 20px;
        }
    </style>
</head>
<body>

    <div class="d-flex g-lg-5"  >
        <nav class="sidebar" style="border-right:2px solid #262626">
            <ul class="pt-5">
                <li style="list-style-type: none;" class="d-flex flex-column">
                    <a asp-action="Index" asp-controller="Home" style="color: #f5f5f5; text-decoration: none; font-size: 29px; margin-bottom: 40px;">Instagram</a>

                    <a asp-action="Index" asp-controller="Home" style="color: #f5f5f5; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-home" style="margin-right: 10px;"></i>Home</a>
                    <a style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-search" style="margin-right: 15px;"></i>Search</a>
                    <a style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-compass" style="margin-right: 15px;"></i>Explore</a>
                    <a style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-play" style="margin-right: 15px;"></i>Reels</a>
                    <a style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-envelope" style="margin-right: 15px;"></i>Messages</a>
                    <a style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-bell" style="margin-right: 15px;"></i>Notifications</a>
                    <a style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><i class="fa fa-plus" style="margin-right: 15px;"></i>Create</a>
                    <a asp-action="ProfilePage" asp-controller="Account" asp-route-UserName="@User.Identity.Name" style="color: #d0d0d0; text-decoration: none; margin-bottom: 25px; font-size: 20px; "><img style="border-radius:8px;margin-right:6px;" src="~/Images//pngtree-avatar-icon-profile-icon-member-login-vector-isolated-png-image_1978396.jpg" width="20px" height="20px" /> Profile</a>
                    <a class="morebutton" style="color: #d0d0d0; text-decoration: none;  font-size: 20px; "><i class=" fa fa-ellipsis-v" style="margin-right: 15px;"></i>More</a>

                    
                    <div id="myModal" class="modal mt-3" style="max-width: 266px; height: 300px; background: #262626; border-radius: 12px; padding: 12px; font-size: 20px;">
                        <div class="text-white d-flex flex-column ">
                            <a style="margin-left: 15px; margin-top: 20px;color:#d0d0d0" id="settingsBtn"><i class="fa fa-cog" style="margin-right:10px"></i> Settings</a>
                            <a style="margin-left: 15px; margin-top: 20px;color:#d0d0d0" id="reportBtn"><i class="fa fa-exclamation-circle" style="margin-right:10px"></i> Report a Problem</a>
                            <a style="margin-left: 15px; margin-top: 20px;color:#d0d0d0" id="savedBtn"><i class="fa fa-save" style="margin-right:10px"></i> Saved</a>
                            <line></line>
                            <form asp-action="LogOutUser" asp-controller="Account" method="post" class="mt-3" style="margin-top: 25px;margin-bottom:-10px">
                                <a style="margin-left: 15px; " id="logoutBtn"><i class="fa fa-sign-out-alt" style="margin-right:10px"></i> <button class="btn btn-primary" type="submit">Logout</button></a>
                            </form>

                        </div>
                    </div>
                </li>
            </ul>
        </nav>

        <div class="container content" style="max-width:100vh;display:flex;justify-content:center;border-right:2px solid #262626 ">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
 

    
    
<script>
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var moreButton = document.querySelector('.morebutton');

        // When the user clicks on the button, open the modal
        moreButton.onclick = function () {
            modal.style.display = "block";
            // Adjust modal position
            var moreButtonRect = moreButton.getBoundingClientRect();
            modal.style.top = (moreButtonRect.bottom + window.scrollY) + "px";
            modal.style.left = moreButtonRect.left + "px";
        }

    modal.addEventListener("click", () => {
        modal.style.display="none"
    })
        // Get the <span> element that closes the modal

        // When the user clicks on <span> (x), close the modal
     


</script>
   

</body>
</html>
